<!DOCTYPE html>
<html>
<head>
  <title>TunesTakeout</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
  <link href='https://fonts.googleapis.com/css?family=Slabo+13px' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header>
      <nav class="navbar navbar-inverse navbar-collapse">
        <%= link_to root_path do %>
          <h1 class="navbar-header navbar-brand">SoundChow</h1>
        <% end %>
        <% if current_user %>
        <ul class="nav navbar-nav">
          <li class="navbar-text">
            <%= link_to favorites_path do %>
              <i class="fa fa-fire" aria-hidden="true"></i> My Favorites
            <% end %>
          </li>
        </ul>
        <% else %>
        <div class="navbar-right">
          <ul class="nav navbar-nav">
            <li class="navbar-user-info"><%= button_to 'Log In With Spotify', '/auth/spotify', class: "btn btn-success" unless current_user %></li>
          </ul>
        </div>
        <% end %>
        <% if current_user %>
          <div class="navbar-right">
            <ul class="nav navbar-nav">
              <li class="navbar-user-info navbar-text"><%= link_to current_user.name, "https://open.spotify.com/user/#{current_user.uid}" %></li>
              <li class="navbar-user-info user-img"><%= image_tag current_user.photo_url, class: "img-circle" %></li>
              <li class="navbar-user-info"><%= button_to 'Log Out', logout_path, method: :delete, class: "btn btn-primary" %></li>
            </ul>
          </div>
        <% end %>
      </nav>
    </header>
    <section class="container">

    <%= yield %>
  </section>

</body>
</html>
